<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="www.diandian.dao.UserinfoDao">

    <insert id="saveUserInfo" parameterType="www.diandian.entity.UserInfo">
        insert into userinfo(username,password) values(#{username},#{password})
    </insert>
    <update id="updateUserInfoByUsername" parameterType="www.diandian.entity.UserInfo">
        update userinfo set password=#{password} where username = #{username}
    </update>
    <delete id="delUserInfo" parameterType="string">
        delete from userinfo where username=#{username}
    </delete>
    <select id="selectUserInfo" resultType="java.util.Map">
        select  * from userinfo
    </select>
    <select id="selectUserInfobyname" parameterType="string" resultType="java.util.Map">
        select * from userinfo where username=#{username}
    </select>
</mapper>
